top() {
pmenu=top
cmenu=top
while [ $menuname = $cmenu ]
do

        clear
        echo "

   1. È¸¿øÁ¤º¸(users)
   
   2. °Ô½ÃÆÇ(board)

   3. ÀÚ·á½Ç(pbs)

   4. ÆíÁö°ü¸®(mails)

   5. ´ëÈ­¹æ(chat) 
"
        getop "¹øÈ£/¸í·É(H,T,P,GO,Z,WH,X) >>"

        if [ "$x" = "1" ] 
        then
                menuname=users 
        elif [ "$x" = "2" ]
        then
                menuname=board 
        elif [ "$x" = "3" ]
        then
                menuname=pbs
        elif [ "$x" = "4" ]
        then
                menuname=mails
        elif [ "$x" = "5" ]
        then
                menuname=chat
        fi

done
}

getop() {
echo "[23H"
while [ $menuname = $cmenu ]
do
        echo -n "$1"
        read x
        compile $x
done
}

compile(){ 
case $1 in
        h|H)
                help;;
        p|P)
                cmenu=bottom
                menuname=$pmenu;;
        x|X)    
                exit;;
        [1-9]*) 
                cmenu=bottom;;
        t|T)
                cmenu=bottom
                menuname=top;;
        w|W)
                vi temp;;
        "wh"|"WH")
                w -h|cut -c1-8;;
        go|GO)
                cmenu=bottom
                menuname=$2
                x=go;;
        pr|PR) 
                cat $2;;
        d|D)
                rm $2
                cmenu=bottom;;
        z|Z)
                cmenu=bottom;;
 esac
}

help() {
echo "
¹øÈ£ : ÇØ´ç¹øÈ£ÀÇ ±Û ÀÐ±â
H    : µµ¿ò¸»
T    : ÃÊ±âÈ­¸éÀ¸·Î ÀÌµ¿
P    : »óÀ§ ¸Þ´º·Î ÀÌµ¿
PR   : ÇØ´ç ±Û ÀÏ°ý Ãâ·Â    (»ç¿ë¹ý : pr + ±Û¹øÈ£)
W    : ±Û¾²±â 
D    : ÇØ´ç¹øÈ£ÀÇ ±Û »èÁ¦   (»ç¿ë¹ý : d + ±Û¹øÈ£)
GO   : °Ô½ÃÆÇÀ¸·Î Á÷Á¢ ÀÌµ¿ (»ç¿ë¹ý : go + °Ô½ÃÆÇ¸í)
Z    : È­¸é Á¤¸®
WH   : ÇöÀç Á¢¼ÓÀÚ ¸í´Ü
X    : Á¢¼Ó Á¾·á
"
}


bbs (){
        menuname=top

        while [ 1 ]
        do
                $menuname
        done

}

bbs


